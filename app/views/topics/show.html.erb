<div class="container-fluid">
	<div class="row">
		<h1 class="topic-title">#<%= @topic.title %></h1>
      <%= link_to 'Edit Topic', edit_topic_path(@topic), class: "btn btn-success" %>
      <%= link_to 'Delete Topic', @topics, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this topic?" } %>
  
  <div class="col-md-5">
    <%= link_to "New Bookmark", new_topic_bookmark_path(@topic, @bookmark), class: 'btn btn-success' %> | <%= link_to "Back", topics_path, class: 'btn btn-info' %>
  </div>

  <div class="col-md-8">
  	<% @topic.bookmarks.each do |bookmark, url| %>
  		<div class="media">
  			<div class="media-heading">
  				<h4><%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %></h4>
  			</div>
  		</div>
  	<% end %>
  </div>
</div>
